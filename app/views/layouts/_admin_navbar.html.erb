                  <li>
                    <a href="#">
                      <div class="pull-left">
                        <%= image_tag("admin/user4-128x128.jpg", class: "img-circle", alt: "User Image") %>
                      </div>
                      <h4>
                        Reviewers
                        <small><i class="fa fa-clock-o"></i> 2 days</small>
                      </h4>
                      <p>Why not buy a new awesome theme?</p>
                    </a>
                  </li>
                </ul>
              </li>
              <li class="footer"><a href="#">See All Messages</a></li>
            </ul>
          </li>
          <!-- Notifications: style can be found in dropdown.less -->
          <li class="dropdown notifications-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= render 'layouts/notification_icon'%>
            </a>
            <ul class="dropdown-menu">
              <li class="header">You have <%= pending_notification_count %> new notifications</li>
              <li>
                <!-- inner menu: contains the actual data -->
                <ul class="menu">

                  <% notifications.each do |notification|%>
                   <li <%if notification.is_read%>style="background-color:wheat;"<%end%> >
                      <%= link_to(admin_update_notification_read_status_path(id: notification.id)) do%>
                      <%#= link_to (get_notification_url(notification.category)) do%>
                      <i class="<%= get_notification_icon(notification.category)%>"></i> <%=get_notification_description(notification)%>
                      <% end %>
                    </li>
                  <% end%>
                </ul>
              </li>
              <li class="footer"><%= link_to 'View all', admin_notifications_path%></li>
            </ul>
          </li>
          <!-- Tasks: style can be found in dropdown.less -->
          <li class="dropdown tasks-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-flag-o"></i>
