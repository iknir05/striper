<div class="box">
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Blog Details</h3>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Blog Image</th>
                  <th>Publish Date</th>
                  <th>Author</th>
                  <th>Title</th>
                  <th>Description</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td><%= image_tag @blog.image.url(:thumb) %></td>
                  <td><%= @blog.publish_date %></td>
                  <td><%= @blog.author %></td>
                  <td><%= @blog.title %></td>
                  <td><%= @blog.description %></td>                  
                </tr>
              </table>
              <br>             
              <%= link_to 'Back', admin_blogs_path, class: "btn btn-default" %>
             
            </div>
</div>