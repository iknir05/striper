<div class="box">
  <%= will_paginate @blogs %>
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Blogs</h3>
              </div>
              <div class="col-md-3">
                <%= render 'layouts/admin_search_form'%>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New News', new_admin_blog_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body blog-data">
                <%= render partial: 'blog_data', locals: {blogs: @blogs}%>
            </div>
</div>