<div class="box">
   <%= will_paginate @galleries %>
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Gallery</h3>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New Job', new_admin_gallery_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Gallery</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @galleries.each do |gallery| %>
                <tr>
                  <td><%= image_tag gallery.gallery_image.url(:thumb) %>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_gallery_path(gallery.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_gallery_path(gallery.id) %></td>
                  <td>
                    <%= button_to admin_gallery_path(gallery.id),method: :delete,data: {turbolinks: false,turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>
            </div>
</div>