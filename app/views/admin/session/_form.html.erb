<%= form_with model: @user, url: admin_login_path,local: true do |form| %>  
      <div class="form-group has-feedback">
        <%= form.text_field :email,:class => "form-control",:placeholder => "Email"%>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            <% if @user.errors.any? %>
            <div id="error_explanation" >
              <ul class="field_with_errors">
                <% @user.errors.full_messages_for(:email).each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
      </div>
      <div class="form-group has-feedback">
        <%= form.password_field :password,:class => "form-control",:placeholder => "Password"%>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <% if @user.errors.any? %>
          <div id="error_explanation" >
            <ul class="field_with_errors">
              <% @user.errors.full_messages_for(:email).each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
           <%= form.submit value="Login", :class => "btn btn-primary btn-block btn-flat"%>
        </div>
        <!-- /.col -->
      </div>
<% end %>