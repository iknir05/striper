<div class="container">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">New Slider</h3>
            </div>

            <div class="form-horizontal">
            <%= form_with model: @slider, url: {action: @action},local: true do |form| %>   
              <div class="box-body">
                <div class="form-group">
                  <%= form.label :slider_image, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.file_field :slider_image,:class => "form-control",placeholder:"Image"%>
                    <% if @slider.slider_image? %>
                        <%= image_tag @slider.slider_image.url(:thumb) %>
                    <% end %>
                    <% if @slider.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @slider.errors.full_messages_for(:slider_image).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :title, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :title,:class => "form-control",placeholder:"Title"%>
                    <% if @slider.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @slider.errors.full_messages_for(:title).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :description, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :description,:class => "form-control",placeholder:"Description"%>
                    <% if @slider.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @slider.errors.full_messages_for(:description).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

				<div class="form-group">
                  <%= form.label :button_title, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :button_title,:class => "form-control",placeholder:"Button Title"%>
                    <% if @slider.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @slider.errors.full_messages_for(:button_title).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :button_url, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :button_url,:class => "form-control",placeholder:"Url"%>
                    <% if @slider.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @slider.errors.full_messages_for(:button_url).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <%= link_to 'Cancel', admin_sliders_path, class: "btn btn-default" %>
                <%= form.submit class: "btn btn-info pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
</div>