              <div class="col-md-7">
                <h3 class="box-title">Jobs</h3>
              </div>
              <div class="col-md-3">
                <%= render 'layouts/admin_search_form'%>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New Job', new_admin_job_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body job-data">
                <%= render partial: 'job_data', locals: {jobs: @jobs}%>
            </div>
</div>