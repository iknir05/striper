<% menus = get_all_menus %>

<div class="box">
  <%= will_paginate menus %>
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Menus</h3>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New Menu', new_admin_menu_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Menu Item</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% menus.each do |menu| %>
                <tr>
                  <td><%= menu.title %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_menu_path(menu.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_menu_path(menu.id) %></td>
                  <td>
                    <%= button_to admin_menu_path(menu.id),method: :delete,data: {turbolinks: false,
              turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>
            </div>
</div>