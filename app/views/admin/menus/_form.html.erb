<div class="container">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">New Menu</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <div class="form-horizontal">
            <%= form_with model: @menu, url: {action: @action},local: true do |form| %>   
              <div class="box-body">
                <div class="form-group">
                  <%= form.label :title, class:"col-sm-2 control-label" %>

                  <div class="col-sm-10">
                    <%= form.text_field :title,:class => "form-control",placeholder:"Title"%>
                    <% if @menu.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @menu.errors.full_messages_for(:title).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :url, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :url,:class => "form-control",placeholder:"Url"%>
                    <% if @menu.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @menu.errors.full_messages_for(:url).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                  <%= form.check_box :menu_header, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.label :menu_header, value:"Header Menu"%>
                    <% if @menu.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @menu.errors.full_messages_for(:menu_header).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                       
                  <%= form.check_box :menu_footer, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.label :menu_footer, value:"Footer Menu"%>
                    <% if @menu.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @menu.errors.full_messages_for(:menu_footer).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
              </div>

              <!-- /.box-body -->
              <div class="box-footer">
                <%= link_to 'Cancel', admin_menus_path, class: "btn btn-default" %>
                <%= form.submit class: "btn btn-info pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
</div>