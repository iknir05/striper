<%n=benefits = get_all_benefits%>

<div class="box">
  <%= will_paginate benefits %>
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Benefits</h3>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New Job', new_admin_benefit_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Job</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% benefits.each do |benefit| %>
                <tr>
                  <td><%= benefit.title %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_benefit_path(benefit.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_benefit_path(benefit.id) %></td>
                  <td>
                    <%= button_to admin_benefit_path(benefit.id),method: :delete,data: {turbolinks: false,turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>
            </div>
</div>