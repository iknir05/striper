              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Facility Item</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% facilities.each do |facility| %>
                <tr>
                  <td><%= facility.title %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_facility_path(facility.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_facility_path(facility.id) %></td>
                  <td>
                    <%= button_to admin_facility_path(facility.id),method: :delete,data: {turbolinks: false,
              turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>
