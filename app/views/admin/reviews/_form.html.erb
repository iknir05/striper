<div class="container">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Review</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <div class="form-horizontal">
              <%= form_with model: @review, url: {action: @action},local: true do |form| %>   
                <div class="box-body">
                  <div class="form-group">
                    <%= form.label :review_image, class:"col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= form.file_field :review_image,:class => "form-control",placeholder:"Image"%>
                      <% if @review.review_image? %>
                          <%= image_tag @review.review_image.url(:thumb) %>
                      <% end %>
                      <% if @review.errors.any? %>
                        <div id="error_explanation" >
                          <ul class="field_with_errors">
                            <% @review.errors.full_messages_for(:review_image).each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= form.label :full_name, class:"col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= form.text_field :full_name,:class => "form-control",placeholder:"Full Name"%>
                      <% if @review.errors.any? %>
                        <div id="error_explanation" >
                          <ul class="field_with_errors">
                            <% @review.errors.full_messages_for(:full_name).each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= form.label :country, class:"col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= form.text_field :country,:class => "form-control",placeholder:"Country"%>
                      <% if @review.errors.any? %>
                        <div id="error_explanation" >
                          <ul class="field_with_errors">
                            <% @review.errors.full_messages_for(:country).each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= form.label :description, class:"col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= form.text_area :description,:class => "form-control",placeholder:"Description"%>
                      <% if @review.errors.any? %>
                        <div id="error_explanation" >
                          <ul class="field_with_errors">
                            <% @review.errors.full_messages_for(:description).each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="box-footer">
                  <%= link_to 'Cancel', admin_reviews_path, class: "btn btn-default" %>
                  <%= form.submit class: "btn btn-info pull-right" %>
                </div>
              <% end %>
            </div>
         
          </div>
</div>