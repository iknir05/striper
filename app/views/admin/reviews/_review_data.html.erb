              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Review Item</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% reviews.each do |review| %>
                <tr>
                  <td><%= review.full_name %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_review_path(review.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_review_path(review.id) %></td>
                  <td>
                    <%= button_to admin_review_path(review.id),method: :delete,data: {turbolinks: false,
              turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>