<div class="box">
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">Review Item</h3>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Review Item</th>
                  <th>Name</th>
                  <th>Country</th>
                  <th>Description</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td><%= image_tag @review.review_image.url(:thumb) %></td>
                  <td><%= @review.full_name %></td>
                  <td><%= @review.country %> </td>
                  <td><%= @review.description %> </td>
                </tr>
              </table>
              <br>             
              <%= link_to 'Back', admin_reviews_path, class: "btn btn-default" %>
             
            </div>
</div>