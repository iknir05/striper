<div class="box">
            <div class="box-header row">
              <div class="col-md-6">
                <h3 class="box-title">News Details</h3>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>News Image</th>
                  <th>Description</th>
                  <th>Url</th>
                </tr>
                </thead>
