              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>News Item</th>
                  <th colspan="3">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% news.each do |news| %>
                <tr>
                  <td><%= news.description %></td>
                  <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, admin_news_path(news.id) %></td>
                  <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_admin_news_path(news.id) %></td>
                  <td>
                    <%= button_to admin_news_path(news.id),method: :delete,data: {turbolinks: false,
              turbo_confirm: 'Are you sure?'}, :class => "btn btn-info" do%>  <i class="fa fa-trash"></i>
                    <%end %>               
                  </td>
                </tr>
                <% end %>
              </table>