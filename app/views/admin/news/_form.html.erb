<div class="container">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">New News</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <div class="form-horizontal">
            <%= form_with model: @news, url: {action: @action},local: true do |form| %>   
              <div class="box-body">

                <div class="form-group">
                  <%= form.label :news_image, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.file_field :news_image,:class => "form-control",placeholder:"Image"%>
                    <% if @news.news_image? %>
                        <%= image_tag @news.news_image.url(:thumb) %>
                    <% end %>
                    <% if @news.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @news.errors.full_messages_for(:news_image).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :description, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :description,:class => "form-control",placeholder:"Description"%>
                    <% if @news.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @news.errors.full_messages_for(:description).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>

                <div class="form-group">
                  <%= form.label :url, class:"col-sm-2 control-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :url,:class => "form-control",placeholder:"Url"%>
                    <% if @news.errors.any? %>
                      <div id="error_explanation" >
                        <ul class="field_with_errors">
                          <% @news.errors.full_messages_for(:url).each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <%= link_to 'Cancel', admin_news_index_path, class: "btn btn-default" %>
                <%= form.submit class: "btn btn-info pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
</div>