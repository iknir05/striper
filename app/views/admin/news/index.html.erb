<div class="box">
  <%= will_paginate @news %>
            <div class="box-header row">
              <div class="col-md-7">
                <h3 class="box-title">News</h3>
              </div>
              <div class="col-md-3">
                <%= render 'layouts/admin_search_form'%>
              </div>
              <div class="col-md-2 ", style= "float: right;">
              <%= link_to 'Add New News', new_admin_news_path, class: "btn btn-block btn-info" %>
               </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body news-data">
                <%= render partial: 'news_data', locals: {news: @news}%>
            </div>
</div>